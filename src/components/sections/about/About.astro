---
import MainContent from "@/components/MainContent.astro"
import Skills from "@/components/sections/about/Skills.astro"
import Education from "@/components/sections/about/Education.astro"
import Experience from "@/components/sections/about/Experience.astro"

import { basics } from "@cv"
const { name, label, summary, email, phone, url, location } = basics
---
<MainContent>
    <section class="about section">
        <div class="contaier">
            <div class="row">
                <div class="section-title padd-15">
                    <h2>About Me</h2>
                </div>
            </div>
            <div class="row">
                <div class="about-content padd-15">
                    <div class="row">
                        <div class="about-text padd-15">
                            <h3>I'm {name} and <span>{label}</span></h3>
                            <p>{summary}</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="personal-info padd-15">
                            <div class="row">
                                <div class="info-item padd-15">
                                    <p>Email : <span>{email}</span></p>
                                </div>
                                <div class="info-item padd-15">
                                    <p>Phone : <span>{phone}</span></p>
                                </div>
                                <div class="info-item padd-15">
                                    <p>Website : <span>{url}</span></p>
                                </div>
                                <div class="info-item padd-15">
                                    <p>City : <span>{location.city}</span></p>
                                </div>
                                <div class="info-item padd-15">
                                    <p>Country : <span>{location.countryCode}</span></p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="buttons padd-15">
                                    <a href="#" class="btn">Download CV</a>
                                    <a href="#contact" class="btn hire-me">Hire me</a>
                                </div>
                            </div>
                        </div>
                        <div class="skills padd-15">
                            <div class="row">
                               <Skills />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <Education />
                        <Experience />
                    </div>
                </div>
            </div>
        </div>
    </section>
</MainContent>

<style>
.about .about-content {
    flex: 0 0 100%;
    max-width: 100%;
}
.about .about-content .about-text {
    flex: 0 0 100%;
    max-width: 100%;
}
.about .about-content .about-text h3 {
    font-size: 24px;
    margin-bottom: 15px;
    font-weight: 700;
    color: var(--text-black-900);
}
.about .about-content .about-text h3 span {
    color: var(--skin-color);

}
.about .about-content .about-text p {
    font-size: 16px;
    line-height: 25px;
    color: var(--text-black-700);
}
.about .about-content .personal-info {
    flex: 0 0 60%;
    max-width: 60% ;
    margin-top: 40px;
}
.about .about-content .personal-info .info-item {
    flex: 0 0 100%;
    max-width: 100%;
}
.about .about-content .personal-info p {
    font-weight: 600;
    padding: 10px 0 ;
    font-size: 16px;
    color: var(--text-black-900);
    border-bottom: 1px solid  var(--text-black-50); 
}
.about .about-content .personal-info p span {
    font-weight: 400;
    color: var(--text-black-700);
    margin-left: 4px;
    display: inline-block;
}
.about .about-content .personal-info .buttons {
    margin-top: 30px;
}
.about .about-content .personal-info .buttons .btn {
    margin-right: 15px;
    margin-top: 10px;
}
.about .about-content .skills {
    flex: 0 0 40%;
    max-width: 40% ;
    margin-top: 40px;
}

</style>